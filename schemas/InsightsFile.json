{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./InsightsFile.json",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "const": "INSIGHTS_V1"
    },
    "data": {
      "type": "object",
      "properties": {
        "insights": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "importKey": {
                "description": "Unique identifier for insight",
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "description": {
                "description": "Description as HTML",
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "icon": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "empathyScore": {
                "anyOf": [
                  {
                    "type": "number"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "externalLinks": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "type": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "status": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "sections": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "groupTags": {
                "anyOf": [
                  {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "tagGroup": {
                          "type": "string"
                        },
                        "tag": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "tagGroup",
                        "tag"
                      ],
                      "additionalProperties": false
                    }
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "weight": {
                "anyOf": [
                  {
                    "type": "number"
                  },
                  {
                    "type": "null"
                  }
                ]
              }
            },
            "required": [
              "importKey",
              "title",
              "description",
              "icon",
              "empathyScore",
              "externalLinks",
              "type",
              "status",
              "tags",
              "sections",
              "weight"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "insights"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "schema",
    "data"
  ],
  "additionalProperties": false,
  "id": "InsightsFile"
}